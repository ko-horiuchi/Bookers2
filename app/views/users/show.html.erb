<main>
<p id="notice"><%= notice %></p>

    <div class= "container px-5 px-sm-0">
      <div class= "row">

        <div class= "col-md-3">
          <h2>User info</h2>
            <div class= "my-3"><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></div>

            <table class="table">
              <tbody class= "font-weight-bold", "mb-3">
                <tr>
                  <td class="profile-name">name</td>
                  <td><%= @user.name %></td>
                </tr>
                <tr>
                  <td class="profile-introduction">introduction</td>
                  <td><%= @user.introduction %></td>
                </tr>
              </tbody>
            </table>

      <div class= "row">
          <%= link_to edit_user_path(@user), class: "btn btn-sm btn-outline-secondary btn-block", method: :get do %>
            <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

      <h2 class="mt-3">New book</h2>
        <%= form_with model: @book, local:true do |f| %>
        <label for="book_title">Title</label></br>
        <%= f.text_field :title, class: "col-md-12 mb-3" %>
        <label for="book_body">Opinion</label></br>
        <%= f.text_area :body, class: "col-md-12" %>
        <%= f.submit 'Create Book',  class: "btn btn-success btn-sm mt-3" %>
        <% end %>
        </div>

        <div class= "col-md-8 offset-md-1">
          <h2>Books</h2>
          <table class= "table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
            <% @user.books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(@user) do %>
                  <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size: '40x40' %>
                  <% end %>
                  </td>
                <td>
                <%= link_to book_path(book.id) do %>
                <%= book.title %>
                <% end %>
                </td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
          </div>
        </div>
</main>