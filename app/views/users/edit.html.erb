<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        
        <h2 class= "my-3">User info</h2>
        
        <%= render 'layouts/error_messages', model: @user %>
        <%= form_with model:@user, local:true do |f| %>
        
        <label for="inputName">Name</label></br>
        <%= f.text_field :name, autofocus: true, id:"inputName", class: "col-md-12 mb-3" %></br>

        <label for="inputImage">Image</label></br>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "mb-3" %></br>

        <label for="inputIntroduction">Introduction</label></br>
        <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", class: "col-md-12 mb-3" %></br>

        <%= f.submit "Update User",class: "btn btn-secondary" %>
        <% end %>

      </div>
    </div>
  </div>
</main>