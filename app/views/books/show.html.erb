<main>
  <p id="notice"><%= notice %></p>

    <div class= "container px-5 px-sm-0">
      <div class= "row">

        <div class= "col-md-3">
          <h2>User info</h2>
            <div class= "my-3"><%= attachment_image_tag @a_user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></div>

            <table class="table">
              <tbody class= "font-weight-bold", "mb-3">
                <tr>
                  <td class="profile-name">name</td>
                  <td><%= @a_user.name %></td>
                </tr>
                <tr>
                  <td class="profile-introduction">introduction</td>
                  <td><%= @a_user.introduction %></td>
                </tr>
              </tbody>
            </table>

      <div class= "row">
          <%= link_to edit_user_path(@a_user), class: "btn btn-sm btn-outline-secondary btn-block", method: :get do %>
            <i class="fas fa-user-cog"></i>
          <% end %>

      </div>

          <h2 class= mt-3>New book</h2>
            <%= form_with model: @new_book, local:true do |f| %>
            <label for="book_title">Title</label></br>
            <%= f.text_field :title, class: "col-md-12 mb-3" %></br>
            <label for="book_body">Opinion</label></br>
            <%= f.text_area :body, class: "col-md-12" %></br>
            <%= f.submit 'Create Book', class: "btn btn-success btn-sm mt-3" %>
            <% end %>
      </div>

      <div class= "col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class= "table table-hover table-inverse">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@a_user.id) do %>
                <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size: '40x40' %></br>
                <%= @a_user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book.id) do %>
                <%= @book.title %>
                <% end %>
              </td>
              <td><%= @book.body %></td>
              <div><% if @book.user_id == current_user.id  %>
              <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success btn-sm" %></td>
              <td><%= link_to 'Destroy', book_path,class: "btn btn-danger btn-sm", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
              <% end %></div>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>